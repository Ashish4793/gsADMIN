<%- include("partials/header"); -%>





<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
              <a href="#" class="nav_logo">
                <i class='bx bx-layer nav_logo-icon'></i>
                <span class="nav_logo-name">GameSwitch LLC</span>
              </a>
              <div class="nav_list">
                <a href="/" class="nav_link  active">
                  <i class='bx bx-plus-circle nav_icon'></i>
                  <span class="nav_name">Add Game</span>
                </a>
                <a href="/updategame" class="nav_link">
                  <i class='bx bx-pencil nav_icon'></i>
                  <span class="nav_name">Update Game</span>
                </a>
                <a href="/delgame" class="nav_link">
                  <i class='bx bx-trash nav_icon'></i>
                  <span class="nav_name">Delete Game</span>
                </a>
                <a href="/viewall" class="nav_link">
                  <i class='bx bx-box nav_icon'></i>
                  <span class="nav_name">View all Games</span>
                </a>
                <a href="/orders" class="nav_link">
                  <i class='bx bx-cart nav_icon'></i>
                  <span class="nav_name">Orders</span>
                </a>
                <a href="/account" class="nav_link">
                  <i class='bx bx-user nav_icon'></i>
                  <span class="nav_name">My Account</span>
                </a>
              </div>
            </div>
            <a href="/logout" class="nav_link">
              <i class='bx bx-log-out nav_icon'></i>
              <span class="nav_name">SignOut</span>
            </a>
          </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100 bg-light">
        <h4 style="font-weight: bolder;">Edit Entries</h4>
        <div >
            <form style="float: left; width: 50vw;" action="/fupdategame" method="post">
                <div style="margin-bottom: 20px;" class="form-group">
                  <label>Game Title*</label>
                  <input name="updateID" type="hidden" value="<%= foundGame.gameName %>">
                  <input style="margin-bottom: 1rem;" name="title" type="text" value="<%= foundGame.gameName %>" class="form-control" placeholder="Enter game title">                </div>
                <div class="form-group">
                  <label>Game Price*</label>
                  <input style="margin-bottom: 1rem;" name="price" type="text" value="<%= foundGame.gamePrice %>" class="form-control"  placeholder="Enter game price">
                </div>
                <div class="form-group">
                    <label>Game Cover Image Link*</label>
                    <input style="margin-bottom: 1rem;" name="coverlink" type="text" value="<%= foundGame.gameCover %>" class="form-control" value="hafuashfhj" placeholder="Enter game cover img link">
                </div>
                <button style="margin-top: 1rem; background-color: green; border: none;" type="submit" class="btn btn-primary">Update</button>
                <a href="/updategame"><button style="margin-top: 1rem; background-color: #4723d9; border: none;" type="button" class="btn btn-primary">Back</button></a>

              </form>

        </div>
    </div>
    <!--Container Main end-->
</body>












<%- include("partials/footer"); -%>